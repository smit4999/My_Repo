<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Style="{DynamicResource WindowStyle}" Loaded="Window_Loaded">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Content="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Padding="20,20,20,20"/>
        <Button Content="LeftTop" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="20,20,20,20" Margin="0,0,0,0"/>
        <Button Content="RightTop" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="20,20,20,20"/>
        <Button Content="BottomTop" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="20,20,20,20"/>
        <Button Content="BottomLeft" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="20,20,20,20"/>
    </Grid>
</Window>